    "import cv2 as cv\n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "cap = cv.VideoCapture(0)\n",
    "if cap.isOpened():\n",
    "    ret,frame= cap.read()\n",
    "else:\n",
    "    ret= False\n",
    "img = cv.cvtColor(frame,cv.COLOR_BGR2RGBA)\n",
    "\n",
    "\n",
    "plt.imshow(img)\n",
    "plt.show()\n",
    "cap.release()\n",
    "\n",
